<%= form_with model: @task, local: true do |form| %>
  <%= render 'shared/task_error_message' %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </p>

  <p>
    <%= form.label :due_date %><br>
    <%= form.date_field :due_date %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>