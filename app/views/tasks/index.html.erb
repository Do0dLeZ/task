<h1>List of task</h1>

<%= link_to 'New task', new_task_path, class: 'btn btn-primary btn-sm' %>

<%= form_with scope: :tasks, local: true do |form| %>

  <%= will_paginate %>
  <ul class="tasks">
    <% @tasks.each do |task| %>
      <li>
        <%= form.check_box :selected_items %>
        <%= link_to task.title, task_path(task) %> |
        <%= link_to 'Edit', edit_task_path(task) %> |
        <%= link_to 'Delete', task_path(task), method: :delete, data: {confirm: 'Are you sure?'} %>
      </li>
    <% end %>
  </ul>
  <%= will_paginate %>

<% end %>